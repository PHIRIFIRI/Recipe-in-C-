<Window x:Class="RecipeApp.IngredientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingredients" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Ingredient Number:" FontWeight="Bold"/>
            <TextBox x:Name="txtIngredientNumber" Margin="0 5 0 10"/>

            <TextBlock Text="Ingredient Name:" FontWeight="Bold"/>
            <TextBox x:Name="txtIngredientName" Margin="0 5 0 10"/>

            <TextBlock Text="Quantity:" FontWeight="Bold"/>
            <TextBox x:Name="txtQuantity" Margin="0 5 0 10"/>

            <TextBlock Text="Unit of Measurement:" FontWeight="Bold"/>
            <TextBox x:Name="txtUnitOfMeasurement" Margin="0 5 0 10"/>

            <TextBlock Text="Total Calories:" FontWeight="Bold"/>
            <TextBox x:Name="txtTotalCalories" Margin="0 5 0 10"/>

            <Button Content="Add" Click="btnAdd_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
