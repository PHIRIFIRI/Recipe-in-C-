<Window x:Class="RecipeApp.StepsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steps" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Number of Steps:" FontWeight="Bold"/>
            <TextBox x:Name="txtNumberOfSteps" Margin="0 5 0 10"/>

            <ListBox x:Name="lstSteps" Margin="0 5 0 10" Height="150"/>

            <Button Content="Add" Click="btnAdd_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
